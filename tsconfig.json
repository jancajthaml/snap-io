{
  "compilerOptions": {
    "baseUrl": ".",
    "alwaysStrict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
    ],
    "jsx": "preserve",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "atoms/*": [
        "src/atoms/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "modules/*": [
        "src/modules/*"
      ],
      "i18n/*": [
        "src/i18n/*"
      ],
      "global/*": [
        "src/global/*"
      ]
    }
  }
}
